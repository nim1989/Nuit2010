<fieldset>
<legend>Editer le profil</legend>

	<% form_remote_for :user, :url => { :action => 'update' }, :method => :put do |f| -%>
			<p><%= f.label :name, 'Nom' -%><br/>
			<%= f.text_field :name -%></p>
			
			<p><%= f.label :address, 'Adresse' -%><br/>
			<%= f.text_field :address -%></p>
			
			<p><%= f.label :phone_number, 'Numéro de téléphone' -%><br/>
			<%= f.text_field :phone_number -%></p>
			
			<p><%= f.label :email, 'Adresse mail' -%><br/>
			<%= f.text_field :email -%></p>
				
			<p><%= submit_tag 'Valider les modifications' -%></p>
	<% end -%>
</fieldset>	
