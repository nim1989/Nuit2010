<h2>Enregistrez vous</h2>
<div id="loginGauche">
	<p id="my-paragraph">Vous pouvez creez un compte sur ce site</p>
	
	<% @user.password = @user.password_confirmation = nil -%>
	
	<%= error_messages_for :user, :header_message => "Le formulaire n'a pas &eacute;t&eacute; correctement rempli", :message => "" -%>
	<fieldset>
<legend>Entrez vos informations personnelles</legend>
	<% form_for :user, :url => users_path do |f| -%>
		
			<p><%= f.label :login, 'Identifiant' -%><br/>
			<%= f.text_field :login -%></p>
		
			<p><%= f.label :comunity_id, 'CommunautÃ©' -%><br/>
			<%= f.collection_select(:comunity_id, @comunities, :id, :name) %></p> 
		
			<%
				# arg 1 label
				# arg 2 collection
				# arg 3 renvoie
				# arg 4 affiche
			%>
			
			
			<p><%= f.label :email -%><br/>
			<%= f.text_field :email -%></p>
		
			<p><%= f.label :password_signup , 'Mot de passe' -%><br/>
			<%= f.password_field :password, :id => 'user_password_signup' -%></p>
			
			<p><%= f.label :password_confirmation, 'Confirmation' -%><br/>
			<%= f.password_field :password_confirmation -%></p>
			
			<p><%= submit_tag 'S\'enregister' -%></p>
			
	<% end -%>
</fieldset>
</div>
