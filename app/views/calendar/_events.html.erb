<ul>
<% @events.sort{|a,b| b.start_time <=> a.start_time}.each do |event| -%>
	<li><strong><%= event.start_time.strftime("%m/%d/%Y") -%></strong>
		<% if event.all_day -%>
			All Day
		<% else -%>
			<%= event.start_time.strftime("%I:%M %p") -%> - <%= event.end_time.strftime("%I:%M %p") -%>
		<% end -%>
		 <%= event.title %>, <%= link_to 'Editer', :action => :view, :event_id => event.id -%>, 
		<%=h link_to 'Supprimer', {:action => :delete_event, :event_id => event.id}, :confirm => 'Etes vous sûr de vouloir supprimer cet événement ?' -%>
	</li>
<% end -%>
</ul>